@* Views/Shared/_PlayerPartial.cshtml *@
<div id="audioPlayer" class="audio-player" style="display: none;">
    <div class="audio-player-inner">
        <div class="song-info">
            <img id="songImage" src="/images/default-album.jpg" alt="Album Art" class="song-image" />
            <div class="song-details">
                <h3 id="songTitle">No song selected</h3>
                <p id="artistName">Unknown Artist</p>
            </div>
        </div>

        <div class="player-controls">
            <audio id="audioElement"></audio>
            
            <div class="control-buttons">
                <button id="prevButton" class="player-button">
                    <i class="fas fa-step-backward"></i>
                </button>
                <button id="playPauseButton" class="player-button play-pause">
                    <i class="fas fa-play"></i>
                </button>
                <button id="nextButton" class="player-button">
                    <i class="fas fa-step-forward"></i>
                </button>
                <button id="downloadButton" class="player-button">
                    <i class="fas fa-download"></i>
                </button>
            </div>

            <div class="progress-container">
                <span id="currentTime">0:00</span>
                <div class="progress-bar">
                    <div id="progress" class="progress"></div>
                </div>
                <span id="duration">0:00</span>
            </div>

            <div class="volume-control">
                <i class="fas fa-volume-up"></i>
                <input type="range" id="volumeSlider" min="0" max="100" value="100">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/audioPlayer.js"></script>
}