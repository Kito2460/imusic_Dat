@model ViewModels.RegisterViewModel

<div class="auth-container">
    <h2>Register</h2>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-input" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-input" placeholder="Create a password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn">Register</button>
        <p class="switch-auth">Already have an account? <a href="/Account/Login">Login here</a></p>
    </form>
</div>